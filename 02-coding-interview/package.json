{
  "name": "coding-interview-platform",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "server",
    "web"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:web\"",
    "dev:server": "npm --workspace server run dev",
    "dev:web": "npm --workspace web run dev",
    "build": "npm --workspace web run build",
    "lint": "npm --workspace web run lint",
    "test": "npm run build && npm --workspace web run test",
    "start": "npm --workspace server run start"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "vitest": "^4.0.15"
  }
}
